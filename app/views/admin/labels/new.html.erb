<h1 class="text-center">レーベル新規登録</h1>
 <div class="container">
    <div class="col align-self-center">
      <% if @label.errors.any? %>
        <div id="error_explanation">
          <h2><%= @label.errors.count %> 件のエラーがあります。</h2>
          <ul>
            <% @label.errors.full_messages.each do |msg| %>
              <li> <%= msg %> </li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_for(@label, url: admin_labels_path) do |f| %>
        <div class="field">
          <h2 class="text-center">レーベル名</h2>
          <h2 class="text-center"><%= f.text_field :label_name%></h2>
        </div>

        <div class="field">
         <h2 class="text-center">
          <%= f.submit "登録", class: "btn btn-default" %>
          <% end %>
         </h2>
        </div>
    </div>
</div>
       <div class="edit_btn">
        <%= link_to "一覧に戻る", admin_labels_path, class:"btn btn-default btn-lg center-block" %>
      </div>

    <style>

.btn{
  margin-bottom: 20px;

}

</style>
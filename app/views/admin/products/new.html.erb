<h1 class="text-center">新商品追加</h1>
  <div class="container">
    <div class="col align-self-center">
      <% if @product.errors.any? %>
        <div id="error_explanation">
          <h2><%= @product.errors.count %> 件のエラーがあります。</h2>
          <ul>
            <% @product.errors.full_messages.each do |msg| %>
              <li> <%= msg %> </li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="artist_btn">
        <%= link_to "アーティスト新規登録", new_admin_artist_path, class:"btn btn-default btn-lg left-block" %>
      </div>
      <div class="label_btn">
        <%= link_to "レーベル新規登録", new_admin_label_path, class:"btn btn-default btn-lg left-block" %>
      </div>
      <div class="product-content">
        <%= render 'form', product: @product %>
        <%= link_to "商品一覧に戻る", admin_artists_path, class:"btn btn-default btn-lg center-block" %>
      </div>
    </div>
  </div>


<style>

.btn{
  margin-bottom: 20px;
}

</style>


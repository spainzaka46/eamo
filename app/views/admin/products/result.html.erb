<h1>検索結果</h1>

<div class="container">
  <div class="row">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-9 col-sm-offset-1">
      <% if @products.any? %>
        <% @products.each do |product| %>
        <%= link_to admin_product_path(product) do %>
          <div class="product-content clearfix">
            <div class="p-photo">
              <div class="field">
                <%= attachment_image_tag product, :photo, :fill, 100, 100, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%> </br>
              </div>
            </div>
            <div class="p-detail">
              <div class="field">
                <span>タイトル</span>
                <%= product.title %>
              </div>

              <div class="field">
                <span>アーティスト</span>
                <%= product.artist.artist_name %>
              </div>

              <div class="field">
                <span>価格(税込)
                 <%= product.price %> 円
                </span>
              </div>
            </div>
          </div>
        <% end %>
        <% end %>
      <% else %>
        <p>検索内容と一致しませんでした。</p>
      <% end %>
    </div>
  </div>
  <%= paginate @products, class: "paginate" %>

  <%= link_to "TOP", admin_products_path %>
</div>
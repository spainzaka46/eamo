<div class="container">

	<div class="row">
		<div class="col-sm-10">
			<h2>商品編集</h2>
			<% if @product.errors.any? %>
			<div id="error_explanation">
				<h2><%= @product.errors.count %> 件のエラーがあります。</h2>
				<ul>
					<% @product.errors.full_messages.each do |msg| %>
					<li> <%= msg %> </li>
					<% end %>
				</ul>
			</div>
			<% end %>
			<div class="product-content">
				<%= form_for @product, url: {action: 'update'} do |f| %>

				<%= render 'form', product: @product, f: f %>

				<% end %>
			</div>

        <button type="button" class="btn btn-default btn-lg center-block">
         <div class="edit_btn">
			<%= link_to '商品詳細へ戻る', admin_product_path(@product) %>
		 </div>
	    </button>


	<h2 class="text-center">商品編集</h2>
	<% if @product.errors.any? %>
	  <div id="error_explanation">
		  <h2><%= @product.errors.count %> 件のエラーがあります。</h2>
		  <ul>
			  <% @product.errors.full_messages.each do |msg| %>
			  	<li> <%= msg %> </li>
			  <% end %>
		  </ul>
	  </div>
	<% end %>
	<div class="product-content">
	  <%= form_for @product, url: {action: 'update'} do |f| %>
			<%= render 'form', product: @product, f: f %>
			<div class="submit">
        <%= f.submit "商品情報更新", class: "btn btn-success btn-lg btn-block" %>
      </div>
		<% end %>

	</div>
  <div class="shom-btn">
	  <%= link_to '商品詳細へ戻る', admin_product_path(@product), class: "btn btn-default btn-lg btn-block" %>
  </div>
</div>

<style>
	.btn{
		margin-bottom: 20px;
	}
</style>
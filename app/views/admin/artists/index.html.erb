<div class="container">
  <div class="row">

      <h1><strong>アーティスト一覧</strong></h1>

      <div class="action">
        <%= link_to "アーティスト新規登録", new_admin_artist_path %>
      </div>
        <table class="table table-striped">
  	      <thead>
  	        <tr>
  	          <th>アーティスト名</th>
  	        </tr>
  	      </thead>

  	      <tbody>
            <% @artists.each do |artist| %>
              <tr>
              	<td><%= artist.artist_name %></td>
                <td><%= link_to "編集", edit_admin_artist_path(artist.id) %></td>
              </tr>
            <% end %>
        	</tbody>
        </table>
        <%= paginate @artists, class: "paginate" %>
    </div>
  </div>
</div>
<div class="container">
	<div class=row>
		<h1 class="text-center">カート内一覧</h1>
		<% if @product_in_carts.empty? %>
			<h2 class="text-center">商品はございません。</h2>
			<% else %>
			<% total_price = 0 %>
			<% @end_user.product_in_carts.each do |product_in_cart| %>
				<div class="product-content clearfix">
					<div class="cart">
						<div class="photo">
							<%= attachment_image_tag product_in_cart.product, :photo, :fill, 250, 250, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "250x250" %>
						</div>
						<div class="tab">
						　<table class="table">
								<tr>
									<th>Title</th><td><%= product_in_cart.product.title %></td>
								</tr>

								<tr>
									<th>アーティスト</th><td><%= product_in_cart.product.artist.artist_name %></td>
								</tr>
								<tr>
									<th>個数</th><td><%= product_in_cart.sheet %></td>
								</tr>
								<tr>
									<th>価格(税込)</th><td><%= product_in_cart.product.price %> 円 </td>
								</tr>
							</table>
						</div>
						<div class="cart2">
							<span><%= link_to '削除', end_user_product_cart_path(product_in_cart.product.id, product_in_cart.id), class: "btn btn-danger ", method: :delete  %></span>
						</div>
						<% total_price += product_in_cart.sheet * product_in_cart.product.price %>
					</div>
				</div>
				<% end %>
				<div class="col-sm-7">
				<table class="table table-bordered ">
					<tr>
						<th style="text-align:center;">商品小計（税込)
						</th>
						<td align="center">
						<%= total_price %> 円
						</td>
					</table>
				</div>
				<% end %>
				<div class="itame1 col-sm-3">
					<%= link_to 'ショッピングを続ける',	end_user_products_path , class:"btn btn-default btn-lg center-block" %>
				</div>
				<div class="itame1 col-sm-3">
					<%= link_to '購入手続きへ', new_end_user_cheeck_path,class:"btn btn-default btn-lg center-block" %>
				</div>
			</div>
		</div>
	</div>

<style>
	.cart {
		margin-top: 50px;
	}

	.tab {
		float: left;
		margin-left: 150px;
		text-align: center;
		position: relative;
	}

	.cart-total {
		padding-top: 50px;
		padding-bottom: 50px;
		float: right;
		font-size: 30px;
	}

	th, td {
		width: 300px;
		font-size: 30px;
	}

	.cart2 {
		position: relative;
	}

	span {
		position: absolute;
		bottom: -250px;
		right: 0px;
	}
	.col-sm-7{
		margin-top: 50px;
		margin-left: 280px;
	}
	.itame1{
		    width: 50%;
		   margin-left: 300px;
			margin-top: 20px;
	 	    margin-bottom: 20px;
	 }


</style>

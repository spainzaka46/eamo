<%= form_for(@order,url:end_user_cheecks_path) do |f| %>
 <h1 class="text-center">購入する内容を確認</h1>
  <div class="container">
     <h2 class="text-center">＜お届け先＞</h2>
     <div class="row">
       <div class="profile_address ">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="text-align:center;">名前</th>
                    <th style="text-align:center;">郵便番号</th>
                    <th style="text-align:center;"> 住所</th>
                    <th style="text-align:center;">電話番号</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td align="center">
                    <%= @order.send_name %>
                    </td>
                    <td align="center">
                    <%= @order.postal_code %>
                    </td>
                    <td align="center">
                    <%= @order.address %>
                    </td>
                    <td align="center">
                    <%= @order.phone_number %></td>
                </tr>
            </tbody>
        </table>
        <%= f.hidden_field :postal_code, :value => @order.postal_code %>
        <%= f.hidden_field :address, :value => @order.address%>
        <%= f.hidden_field :phone_number, :value => @order.phone_number %>
        <%= f.hidden_field :send_name, :value => @order.send_name %>
            <div class="method clearfix">
                <div class="box7 subtotal">
                    <h3 class="text-center">＜支払い方法＞</h3>
                </div>
                <div class="box8">
                    <h3 class="text-center">
                    <%= @order.method_of_payment %></h3>
                </div>
            </div>
       
        <%= f.hidden_field :method_of_payment, :value =>@order.method_of_payment %>
        <%= f.hidden_field :delivery_charge, :value => @order.delivery_charge %>
        <h2 class="text-center">購入する内容を確認</h2>
        <div class="syoukei clearfix">
            <div class="box1 subtotal">
                <h3 class="text-center">商品の小計:</h3>
            </div>
                <div class="box2">
                    <h3 class="text-center">
                    <%= @total %></h3>
                </div>
        </div>
        <div class="delivery clearfix">
            <div class="box3 delivery">
                <h3 class="text-center">配送料:</h3>
            </div>
            <div class="box4">
                <h3 class="text-center">
                <%= @order.delivery_charge %>円</h3>
            </div>
        </div>
        <div class="total clearfix">
            <div class=" box5 total">
                <h3 class="text-center">ご請求額:</h3>
            </div>
            <div class="box6">
                <h3 class="text-center"><%=@total+@order.delivery_charge %>円</h3>
            </div>
        </div>
        <div class="field">
            <h2 class="text-center"><%= f.submit "確定"%></h2>
　      </div>
      </div>
    </div>
  </div>
  <% end %>




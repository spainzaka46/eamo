<div>
  <div>
    <div>
      <%= form_for @order do |f| %>
      <div>
        <h2>購入する内容を確認</h2>
            <p>＜お届け先＞</p>
              <table>
                  <thead>
                      <tr>
                          <th>名前</th>
                          <th>郵便番号</th>
                          <th>住所</th>
                          <th>電話番号</th>
                      </tr>
                  </thead>
                  <tbody>

                      <tr>
                          <td><%= f.hidden_feild adderss: , value: @address.address.send_name %></td>
                          <td><%= f.hidden_feild adderss: , value: @address.postal_code %></td>
                          <td><%= f.hidden_feild adderss: , value: @address.address %></td>
                          <td><%= f.hidden_feild adderss: , value: @address.phone_number %></td>

                      </tr>


                  </tbody>
              </table>
        </div>
        <div>
            <p>＜支払い方法＞</p>
            <div>
                <p><%=f.hidden_feild method_of_payment:, @method_of_payment.method_of_payment %></p>
            </div>
        </div>
        <% end %>
      <div>
    <div>
            <h2>購入する内容を確認</h2>

            <table>
                <thead>
                    <tr>
                        <th>商品の小計</th>
                        <th>配送料（一律）</th>
                        <th>ご請求額</th>

                    </tr>
                </thead>
                <tbody>

                    <tr>
                      <% total = 0 %>
                        <td><%= total_price %></td>
                        <td><%= @delivery_charges.delivery_charge %></td>
                      <% total = total_price + @delivery_charges.delivery_charge %>
                        <td><%= total %></td>
                    </tr>
                </tbody>
            </table>
        </div>

        </div>
        <%= link_to '確定', end_user_cheack_path, class: 'btn btn-default' %>
    </div>
</div>


<div class="col-sm-3">
	<div class="search">
		<div class="search-title"> 検 索</div>
		<div class="search-form" align="center"><%= render "end_user/search" %></div>
	</div>
	<div class="panel panel-primary">
		<div class="panel-heading">
			<h2 class="panel-title">ジャンル別</h2>
		</div>
		<div class="list-group">
			<% genres.each do |genre| %>
			<%= link_to "#{genre.genre_name}", end_user_genre_path(genre.id),class: "list-group-item list-group-item-action" %>
			<% end %>
		</div>
	</div>
	<div class="panel panel-success">
		<div class="panel-heading">
			<h2 class="panel-title">フィーリング</h2>
		</div>
		<% themes.each do |theme| %>
		   <%= link_to "#{theme.theme}", end_user_theme_path(theme.id),class:  "list-group-item list-group-item-action" %>
		<% end %>
	</div>
</div>



<style>

	.search {
		border: solid 2px #fdeff2;
    border-radius: 5px;
    height: 100px;
	  margin: 2em 0;
	}
	.search .search-title {
		font-size: 18px;
    background: #fdeff2;
    padding: 4px 0 4px 15px;
    color: #606060;
    letter-spacing: 0.05em;
	}
	.search-form {
    padding-top: 20px;
	}

</style>
<div class="container">
  <div class="row">
    <div class="col align-self-center">
      <h2>商品詳細</h2>

      <div class="field">
        <%= attachment_image_tag @product, :photo, :fill, 250, 250, class: "profile-thumb", fallback: "no_image.jpg"%> </br>
      </div>
      <div class="field">
        <span class="headind">タイトル</span>
        <%= @product.title %>
      </div>

      <div class="field">
        <span class="headind">アーティスト</span>
        <%= @product.artist.artist_name %>
      </div>
      <div class="field">
        <span class="headind">ジャンル</span>
        <%= @product.genre.genre_name %>
      </div>
      <div class="field">
        <span class="headind">レーベル</span>
        <%= @product.label.label_name %>
      </div>

      <div class="field">
        <span class="headind">価格(税込)</span>
        <%= @product.include_tax %> 円
      </div>

      <div>
        <span class="headind">在庫状況</span>
        <span>
          <% if @stock == 0 %>
            売切
          <% else %>
            在庫あり
          <% end %>
        </span>
      </div>

      <div class="field">
        <span class="headind">ステータス</span>
        <%= @product.sales_status %>
      </div>

      <% if @stock == 0 %>
        <div class="cart-btn">
          <button type="button" class="btn btn-warning" disabled="disabled"> 売切 </button>
        </div>
      <% else %>
        <div class="cart-btn">
          <%= form_for @cart, url: end_user_product_carts_path(@product) do |f| %>
          <div class="field">
            <span class="headind">数量</span>
            <%= f.number_field :sheet, min: 1, max: (@stock).to_i %>
            <%= f.submit 'カートに入れる', class: "btn btn-info" %>
        </div>
      <% end %>
      <% end %>

      <div class="record-content">
        <% @product.disks.each do |disk| %>
          <h3>収録ディスク</h3>
          <div id="disks">
            <p>ディスクNo. <%= disk.disk_number %> </p>
          </div>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>トラックNo.</th>
                <th>曲名</th>
                <th>Feeling</th>
              </tr>
            </thead>
            <tbody>
              <% disk.record_musics.each do |record_music| %>
                <tr>
                  <td><%= record_music.track_number %></td>
                  <td><%= record_music.song_name %></td>
                  <td><%= record_music.theme.theme %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>


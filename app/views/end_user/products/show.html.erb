  .title {
    margin-bottom: 20px;
  }

  .cart-btn {
    margin-top: 10px;
  }

  .title-con {
    margin-left: 350px;
    margin-bottom: 80px;
  }

  .record-content {
    margin-bottom: 80px;
  }

  .row{
    margin-bottom: 50px;
  }


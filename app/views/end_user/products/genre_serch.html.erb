<div class="container">
	<div class="row">
		 <div class="col-sm-3">
  		<div class="panel panel-primary">
			  <div class="panel-heading">
			    <h2 class="panel-title">ジャンル別</h2>
			  </div>
			    <div class="list-group">
			       <% @genres.each do |genre| %>
			         <%= link_to "#{genre.genre_name}", end_user_genre_path(genre.id),class: "list-group-item list-group-item-action" %>
			       <% end %>
			  	</div>
			</div>

			<div class="panel panel-success">
			  <div class="panel-heading">
			    <h2 class="panel-title">フィーリング</h2>
			  </div>
			    <% @themes.each do |theme| %>
		        <%= link_to "#{theme.theme}", end_user_theme_path(theme.id),class:  "list-group-item list-group-item-action" %>
		      <% end %>
			</div>
  	</div>
		
		<h1>ジャンル別</h1>
		<div class="col-sm-7 col-sm-offset-1">
			<% @products.each do |product| %>
			<%= link_to end_user_product_path(product) do %>
				<div class="product-content clearfix">
					<div class="p-photo">
						<div class="field">
							<%= attachment_image_tag product, :photo, :fill, 100, 100, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></br>
						</div>
					</div>
					<div class="p-detail">
						<div class="field">
							<span>タイトル</span>
							<%= product.title %>
						</div>

						<div class="field">
							<span>アーティスト</span>
							<%= product.artist.artist_name %>
						</div>

						<div class="field">
							<span>ジャンル</span>
							<%= product.genre.genre_name %>
						</div>

						<div class="field">
							<span>価格</span>
							<%= product.price %>
						</div>
					</div>

				</div>
				<% end %>
			<% end %>
		</div>
	</div>
	<%= paginate @genres, class: "paginate" %>
	<%= link_to "TOP", end_user_products_path %>
</div>
<style>

	.product-content {
	  width: 200px;
	  padding: 20px;
		border-bottom: 2px solid #f7f7f7;
		float: left;
	}

	.disk-content {
	  float: right;
	}

</style>







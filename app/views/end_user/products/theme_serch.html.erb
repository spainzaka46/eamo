<div class="container">
	<div class="row">
		<div class="col-sm-3">
  		<div class="panel panel-primary">
			  <div class="panel-heading">
			    <h2 class="panel-title">ジャンル別</h2>
			  </div>
			    <div class="list-group">
			       <% @genres.each do |genre| %>
			         <%= link_to "#{genre.genre_name}", end_user_genre_path(genre.id),class: "list-group-item list-group-item-action" %>
			       <% end %>
			  	</div>
			</div>

			<div class="panel panel-success">
			  <div class="panel-heading">
			    <h2 class="panel-title">フィーリング</h2>
			  </div>
			    <% @themes.each do |theme| %>
		        <%= link_to "#{theme.theme}", end_user_theme_path(theme.id),class:  "list-group-item list-group-item-action" %>
		      <% end %>
			</div>
  	</div>

		<h1>フィーリング別</h1>
		<div class="col-sm-7 col-sm-offset-1">
			<% @record_musics.each do |record_music| %>
				<%= attachment_image_tag product, :photo, :fill, 100, 100, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
				<p>テーマ</p>
				<%= record_music.theme_name %>

				<p>アーティスト</p>
				<%= record_music.disk.product.artist.artist_name %>

				<p>曲名</p>
				<%= record_music.song_name %>

				<!-- <%= form_for @theme, url: end_user_product_carts_path(product.id) do |f| %> -->
					<!-- <%= f.number_field :sheet %> -->
					<!-- <%= f.submit  'カートに入れる' %> -->
			<% end %>

				<%= link_to '商品詳細', end_user_product_path %>

				<!-- そのままカートに入れるか、一旦商品詳細に行くか -->

		</div>
	</div>
	<%= link_to "TOP", end_user_products_path(producr.id) %>
</div>
<style>

	.product-content {
	  width: 200px;
	  padding: 20px;
		border-bottom: 2px solid #f7f7f7;
		float: left;
	}

	.disk-content {
	  float: right;
	}

</style>


